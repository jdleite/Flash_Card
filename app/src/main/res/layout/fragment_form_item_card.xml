<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/item_form">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_edt_name_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:maxLength="19"
                android:hint="@string/frente_do_card"
                android:inputType="textCapWords"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_edt_name_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:maxLength="19"
                android:hint="@string/costas_do_card"
                android:inputType="textCapWords"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/id_btn_save_item"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="#F66262"
            android:layout_marginTop="80dp"/>

        <Button
            android:id="@+id/id_btn_cancel_item"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginLeft="200dp"
            android:backgroundTint="#F66262"
            android:layout_marginTop="-49dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>